<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_gravity="top"
            android:background="#FFFFFF"></ImageButton>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/mainicon"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"></ImageView>
    </LinearLayout>
    <TableLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        >
        <TableRow>
            /*android:background="#000000"*/
            <ImageView
                android:id="@+id/travelimg"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/default_gallery"
                android:background="#FFFFFF"
                android:layout_margin="1dp" />
            <TextView
                android:id="@+id/traveltext"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:text="나라\n\n출발날짜 ~ 도착날짜"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="20dp"
                android:background="#FFFFFF"
                android:layout_margin="1dp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/fontstyle"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="170dp"
        >
        <TableRow>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/scheduleicon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goSchedule"
                />
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/diaryicon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goDiary"
                />
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/moneyicon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goMoney"
                />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/checklisticon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goCheckList"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="일정"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="다이어리"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="가계부"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:text="체크리스트"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <ImageButton
            android:id="@+id/publicbtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#00FFFFFF"
            android:src="@drawable/publicbtn"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />
        <ImageButton
            android:id="@+id/privatebtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#00FFFFFF"
            android:src="@drawable/privatebtn"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            />
        <ImageButton
            android:id="@+id/xbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00FFFFFF"
            android:src="@drawable/xbtn"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:text=">떠나시는 나라의 현재 정보를 확인해보세요!"
        android:textColor="#009688"
        android:textSize="17dp"
        android:fontFamily="@font/fontstyle"
        android:paddingTop="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="@drawable/layout_background">
            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/temperature"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="기온"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="center"
                android:fontFamily="@font/fontstyle"/>
        </LinearLayout>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/layout_background">
            <TextView
                android:id="@+id/rateText"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center"
                android:text="나라 단위\t\t\t\t\t\t원"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="@font/fontstyle"/>
            <TextView
                android:id="@+id/nationTime"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center"
                android:text="시간"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="@font/fontstyle"/>
        </LinearLayout>-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TableRow
                android:background="@drawable/layout_background">
                <TextView
                    android:id="@+id/nationText"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:text="나라"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/fontstyle"/>
                <TextView
                    android:id="@+id/rateText"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:text="환율"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:paddingTop="30dp"
                    android:fontFamily="@font/fontstyle"/>
            </TableRow>
            <TableRow
                android:background="@drawable/layout_background">
                <TextView
                    android:id="@+id/nationTime"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="2"
                    android:layout_span="2"
                    android:text="시간"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/fontstyle"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
