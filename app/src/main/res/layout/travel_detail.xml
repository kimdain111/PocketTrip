<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp"
        >

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_gravity="top"
            android:background="#FFFFFF"></ImageButton>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/mainicon"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"></ImageView>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        >
        <TableRow
            android:background="#000000">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/default_img"
                android:background="#FFFFFF"
                android:layout_margin="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:text="스위스\nD-30"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_margin="1dp"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        >
        <TableRow>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/schedulBtn"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/yellowbtn"
                android:text="일정"
                />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/diaryBtn"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/yellowbtn"
                android:text="다이어리"
                />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/moneyBtn"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/yellowbtn"
                android:text="가계부"
                />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/checklistBtn"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/yellowbtn"
                android:text="체크리스트"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>
