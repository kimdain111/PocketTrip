<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp"
        >

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_gravity="top"
            android:background="#FFFFFF"></ImageButton>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/mainicon"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"></ImageView>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        >
        <TableRow
            android:background="#000000">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/default_gallery"
                android:background="#FFFFFF"
                android:layout_margin="1dp"/>
            <TextView
                android:id="@+id/traveltext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:text="나라\n출발날짜 ~ 도착날짜"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_margin="1dp"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        >
        <TableRow>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/scheduleicon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goSchedule"
                />
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/diaryicon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goDiary"
                />
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/moneyicon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goMoney"
                />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/checklisticon"
                android:background="#ffffff"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="goCheckList"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="일정"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="다이어리"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="가계부"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:text="체크리스트"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:layout_gravity="center_horizontal" />
        </TableRow>
    </TableLayout>
</LinearLayout>
