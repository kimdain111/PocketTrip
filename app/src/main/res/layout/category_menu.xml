<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:layout_height="130dp"
        android:background="@android:color/background_light">
        <Button
            android:id="@+id/eat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/eat"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:text="식비"/>
        <Button
            android:id="@+id/traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/bus"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:text="교통"/>
        <Button
            android:id="@+id/life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/sofa"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:text="생활"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:layout_height="130dp"
        android:background="@android:color/background_light">
        <Button
            android:id="@+id/culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/culture"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:text="문화생활"/>
        <Button
            android:id="@+id/souvenir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/souvenir"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:text="기념품"/>
        <Button
            android:id="@+id/fashion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/clothes"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:text="패션"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingLeft="13dp"
        android:background="@android:color/background_light">
        <Button
            android:id="@+id/etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/coin"
            android:background="@android:color/transparent"
            android:layout_margin="20dp"
            android:text="기타"/>
    </LinearLayout>
</LinearLayout>