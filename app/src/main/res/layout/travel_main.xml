<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp"
        >

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_gravity="top"
            android:background="#FFFFFF"></ImageButton>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/mainicon"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"></View>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="여행지"
                    android:textSize="30sp"
                    android:fontFamily="@font/fontstyle"/>

                <TextView
                    android:id="@+id/noTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="아직 계획 중인 여행이 없어요"
                    android:textSize="20sp"
                    android:fontFamily="@font/fontstyle"
                    />

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TableRow>

                        <ImageView
                            android:id="@+id/travelImg"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/default_gallery"/>

                        <TextView
                            android:id="@+id/travelText"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="2"
                            android:text="한국\n2020.06.01 ~ 2020.06.04"
                            android:fontFamily="@font/fontstyle"
                            android:textSize="20dp"
                            android:layout_gravity="center"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:orientation="horizontal">-->

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addTravel"
        android:src="@drawable/plus"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:onClick="addTravel"/>
    <!--    </LinearLayout>-->
</LinearLayout>