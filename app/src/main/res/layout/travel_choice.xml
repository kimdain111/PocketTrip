<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/mainicon"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행지"
            android:textSize="20dp"
            android:fontFamily="@font/fontstyle"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/nationSpinner"
            android:entries="@array/nation_array"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발날짜"
            android:textSize="20dp"
            android:fontFamily="@font/fontstyle"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/firstDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="OnClickHandler"
            android:hint="날짜를 선택하세요"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착날짜"
            android:textSize="20dp"
            android:fontFamily="@font/fontstyle"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/lastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="OnClickHandler2"
            android:hint="날짜를 선택하세요"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진"
            android:textSize="20dp"
            android:fontFamily="@font/fontstyle"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/travelImg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="2"
            android:src="@drawable/default_gallery" />
    </LinearLayout>
    <Button
        android:id="@+id/addTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:fontFamily="@font/fontstyle"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="travelInsert"/>
</LinearLayout>