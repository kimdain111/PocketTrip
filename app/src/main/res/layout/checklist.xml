<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/mainicon"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/menu"
            android:src="@drawable/user"
            android:scaleType="fitCenter"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="top"
            android:background="#FFFFFF"
            android:onClick="goMypage"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행지"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/fontstyle"
                    android:id="@+id/travel"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기간"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/fontstyle"
                    android:id="@+id/travelFirst"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/fontstyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/fontstyle"
                    android:id="@+id/travelLast"/>
            </LinearLayout>
        </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="준비물"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:clickable="true"
                android:onClick="check1Click"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기념품"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                android:clickable="true"
                android:onClick="check2Click"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_margin="3dp"
                android:background="#8C8CE6"
                android:layout_weight="1"
                android:id="@+id/view1"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_margin="3dp"
                android:background="#8C8CE6"
                android:layout_weight="1"
                android:id="@+id/view2"
                android:visibility="invisible"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/scroll1">
            <TableLayout
                android:id="@+id/table1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/scroll2"
            android:visibility="gone">
            <TableLayout
                android:id="@+id/table2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="체크리스트"
            android:layout_margin="20dp"
            android:id="@+id/editcheck"
            android:fontFamily="@font/fontstyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="등록"
            android:id="@+id/addcheck"
            android:fontFamily="@font/fontstyle"
            android:textColor="#000000"
            android:onClick="checkInsert"/>
    </LinearLayout>
</LinearLayout>
